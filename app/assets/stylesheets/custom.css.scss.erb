// The striking makespace colour scheme.
$makespaceOrange: #fe5200;
$makespaceGreen: #8dda00;

// Add Bootstrap customisation here.

$linkColor: hsl(hue($makespaceGreen), 100%, 30%);
$btnPrimaryBackground: darken($makespaceGreen, 2%);
$btnPrimaryBackgroundHighlight: darken($btnPrimaryBackground, 10%);

@import "bootstrap";
@import "bootstrap-responsive";

$footerBackground: $navbarBackground;
$footerBackgroundHighlight: darken($navbarBackground, 10%);

$headerSkip: $baseLineHeight;
$footerSkip: $baseLineHeight;
$footerHeight: $navbarHeight;

div .training-red {
  background-color: lightpink;
  border-color: red;
}

div .training-amber {
  background-color: lightgoldenrodyellow;
  border-color: goldenrod;
}

div .training-green {
  background-color: lightgreen;
  border-color: green;
}

// ///// UTILITY /////

/* Rails scaffold style compatibility */
#error_explanation {
  @extend .alert;
  @extend .alert-error;
  @extend .alert-block; /* optional */
}

.field_with_errors {
  @extend .control-group.error
}

.alert-alert { /* no special styling */ }
.alert-notice { @extend .alert-info; }

@mixin gradient($first, $second) {
  background: $second;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='$first', endColorstr='$second');
  background: -webkit-gradient(linear, left top, left bottom, from($first), to($second));
  background: -moz-linear-gradient(top,  $first,  $second);
}

@mixin box-shadow($top, $left, $blur, $color, $inset:"") {
  -webkit-box-shadow:$top $left $blur $color #{$inset};
  -moz-box-shadow:$top $left $blur $color #{$inset};
  box-shadow:$top $left $blur $color #{$inset};
}

// ///// TOP-LEVEL /////

html, body { height: 100%; }

#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -1*$footerHeight;
}

#push, #footer { height: $footerHeight; }

// ///// HEADER /////

// add a makespace logo to the left of the title
.brand {
  padding-left: $gridGutterWidth + 45px + 5px !important;
  background-image: url(<%= asset_path 'makespace_logo_30px.png' %>);
  background-repeat: no-repeat;
  background-position: $gridGutterWidth 50%;
}

// ///// MAIN CONTENT /////

.main-content {
  padding-top: $headerSkip;
  padding-bottom: $footerSkip;
}

// ///// FOOTER /////

footer {
  .footer {
    @extend .navbar;
    @extend .navbar-static-top;
  }

  a {
    color: $navbarLinkColor;

    &:hover { color: $navbarLinkColorHover; }
    &:active { color: $navbarLinkColorActive; }
  }

  .footer-inner {
    @extend .navbar-inner;
    @include gradient($footerBackgroundHighlight, $footerBackground);
  }

  .footer-text {
    @extend .navbar-text;
  }
}

.delete-form {
  display: inline;

  button {
    background:none!important;
    border:none;
    padding:0!important;
  }
}
