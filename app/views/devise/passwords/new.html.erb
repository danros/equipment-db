<div class="span6 offset3 form-well">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
    <legend>Forgot your password?</legend>

    <%= devise_error_messages! %>

    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls"><%= f.email_field :email, placeholder: 'name@example.com' %></div>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me an email", class: "btn btn-primary btn-large" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
