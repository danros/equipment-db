<ul class="breadcrumb">
  <li class="active">All devices</li>
</ul>

<h1>All the things</h1>

<p><%= link_to "Add a device", new_device_path, class: 'btn btn-mini' %></p>

<% @page.sections.each do |section| %>
<h4><%= section[:name] %></h4>
<% if section[:devices].size > 0 %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Make / Model</th>
      <th>Asset Code</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% section[:devices].each do |device_row| %>
      <%= render :partial => 'device_row', :object => device_row %>
    <% end %>
  </tbody>
</table>
<% else %>
<p>No devices in category</p>
<% end %>
<% end %>

