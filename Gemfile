source 'https://rubygems.org'

gem 'rails', '3.2.8'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'pg'

# Gems used only in development and testing
group :development, :test do
  # In production we'll use Postgres but for development/testing using sqlite3 is easier
  gem 'sqlite3'

  # Use the rspec framework for TDD
  gem 'rspec-rails'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# The Twitter 'bootstrap' CSS framework. The best way to be web 2.0 compliant.
gem 'bootstrap-sass'

# Annotate models with the DB schema
gem 'annotate', group: :development

group :test do
  # capybara allows writing simple tests for rendered webpage content
  gem 'capybara'

  # FactoryGirl allows simple fixtures to be generated in the database for
  # testing (e.g. populating our users table with some test data).
  gem 'factory_girl_rails', '~> 4.0'
end

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby', '~> 3.0.0'

# To use the devise framework for authentication
gem 'devise'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'
