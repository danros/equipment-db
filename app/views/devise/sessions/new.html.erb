<div class="span6 offset3 form-well">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>
    <legend>Sign in</legend>

    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls"><%= f.email_field :email, placeholder: 'name@example.com' %></div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls"><%= f.password_field :password, placeholder: 'password' %></div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="control-group">
        <div class="controls">
          <%= f.label :remember_me, { class: 'checkbox' } do %>
            <%= 'remember_me'.humanize() %>  
            <%= f.check_box :remember_me %>
          <% end %>
        </div>
      </div>
    <% end -%>

    <div class="form-actions">
      <%= f.submit "Sign in", class: "btn btn-primary btn-large" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
