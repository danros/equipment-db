<form action="<%= form.action %>" method="post">
  <%= token_tag(nil) %>
  <% if form.method == 'put' %>
    <input type="hidden" name="_method" value="put">
  <% end %>
  <label for="device_name">Name:</label>
  <input type="text" id="device_name" name="device[name]" value="<%= form.name %>">
  <label for="device_model">Make / model:</label>
  <input type="text" id="device_model" name="device[model]" value="<%= form.model %>">
  <label for="device_status_id">Status:</label>
  <select id="device_status_id" name="device[status_id]">
    <% form.status_values.each do |v| %>
      <option value="<%= v[1] %>"<%= ' selected="selected"' if v[1] == form.status_id %>><%= v[0] %></option>
    <% end %>
  </select>
  <label for="device_category_id">Category:</label>
  <select id="device_category_id" name="device[category_id]">
    <% form.category_values.each do |v| %>
      <option value="<%= v[1] %>"<%= ' selected="selected"' if v[1] == form.category_id %>><%= v[0] %></option>
    <% end %>
  </select>
  <label for="device_training_category_id">Training Category:</label>
  <select id="device_training_category_id" name="device[training_category_id]">
    <% form.training_category_values.each do |v| %>
      <option value="<%= v[1] %>"<%= ' selected="selected"' if v[1] == form.training_category_id %>><%= v[0] %></option>
    <% end %>
  </select>
  <label for="device_reference_url">Reference URL:</label>
  <input type="text" id="device_reference_url" name="device[reference_url]" value="<%= form.reference_url %>">
  <span class="help-block">Please create a page on the Makespace wiki for the device and reference it here.</span>
  <label for="device_asset_code">Asset code:</label>
  <input type="text" id="device_asset_code" name="device[asset_code]" value="<%= form.asset_code %>">
  <label for="device_pat_date">PAT test due:</label>
  <input type="date" id="device_pat_date" name="device[pat_date]" value="<%= form.pat_date %>">

  <label for="device_minor_item">Minor item?:</label>
  <input type="checkbox"<%= form.minor_item? ? ' checked="checked"' : '' %> name="device[minor_item]" value="1">
  <label for="device_provenance_id">Provenance:</label>
  <select id="device_provenance_id" name="device[provenance_id]">
    <% form.provenance_values.each do |v| %>
      <option value="<%= v[1] %>"<%= ' selected="selected"' if v[1] == form.provenance_id %>><%= v[0] %></option>
    <% end %>
  </select>
  <label for="device_date_acquired">Date acquired:</label>
  <input type="date" id="device_date_acquired" name="device[date_acquired]" value="<%= form.date_acquired %>">
  <label for="device_value_when_acquired">Value when acquired:</label>
  <input type="text" id="device_value_when_acquired" name="device[value_when_acquired]" value="<%= form.value_when_acquired %>">

  <p><button type="submit" class="btn">Submit</button><a class="btn" href="/">Cancel</a></p>
</form>
